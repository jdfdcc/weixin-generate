.page_chapter_item {
  min-height: 130rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #e0e0e0;
}

.page_chapter_item .content {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #999999;
  letter-spacing: 0;
  margin-top: 15rpx;
}

.btn_right {
  height: 90rpx;
  margin: 0;
}

.page_chapter_item .left {
  font-size: 28rpx;
  color: gray;
}

.page_chapter_item .left .title {
  font-weight: 800;
  font-size: 30rpx;
  color: black;
}