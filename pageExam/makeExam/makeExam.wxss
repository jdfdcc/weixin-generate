.page_title {
  height: 130rpx;
  box-shadow: 0px 0rpx 3rpx #e0e0e0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  color: rgb(30, 30, 30);
  font-size: 45rpx;
  background: #fff;
  margin-bottom: 1rpx;
  /* font-family: PingFangSC-Medium; */
}
.page_title .end {
  color: rgb(170, 170, 170);
  font-size: 30rpx;
}
.page_content {
  background: #fff;
  padding: 30rpx 0;
}

.qustion_title {
  padding: 30rpx;
  font-size: 40rpx;
  /* display: flex; */
  /* font-family: PingFangSC-Medium; */
}

.qustion_title::before {
  display: inline-block;
  content: "多选题";
  font-size: 30rpx;
  padding: 5rpx 15rpx;
  border-radius: 8rpx;
  background: #FFE11C;
}

.qustion_title.radio::before {
  content: "单选题";
}

.answer_item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 45rpx;
  font-size: 35rpx;
  vertical-align: middle;
  padding: 10rpx 20rpx;
  margin: 0 30rpx;
  border: 1px solid #e0e0e0;
  margin-top: 30rpx;
  border-radius: 10rpx;
  /* font-family: PingFangSC-Semibold; */
}

.question_answer {
  margin-top: 20rpx;
}

.answer_value {
  /* margin-left: 30rpx; */
  min-height: 70rpx;
  display: flex;
  align-items: center;
  vertical-align: middle;
}

.answer_item .answer_title {
  height: 70rpx;
  width: 70rpx;
  flex: 0 0 70rpx;
  text-align: center;
  line-height: 70rpx;
  background: rgb(239, 241, 255);
  border-radius: 10rpx;
  display: block;
  /* transition: background linear .2s; */
}

.choose, .choose .answer_title {
  /* background: #FFE11C; */
  border-radius: 8rpx;
  border: none;
  background: rgba(255,225,28, .6);
}


.page_explain{
  padding: 0 30rpx 30rpx 30rpx;
  background: #fff;
  font-size: 30rpx;
}

.answer_result {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #e0e0e0;
  height: 120rpx;
}

.answer_result .right_ {
  color: rgb(108, 201, 109);
  font-size: 40rpx;
}
.answer_result .right {
  color: rgb(108, 201, 109);
}

.answer_result .error {
  color: red;
}

.answer_result .icon {
  vertical-align: middle;
  margin-right: 10rpx;
}

.answer_explain {
  padding-top: 30rpx;
  padding-left: 60rpx;
  font-size: 30rpx;
}
.answer_explain .title {
  font-size: 35rpx;
  color: rgb(99, 99, 99);
  position: relative;
  margin-bottom: 20rpx;
}
.answer_explain .title::before {
  content: '';
  position: absolute;
  height: 15rpx;
  width: 15rpx;
  background: red;
  border-radius: 50%;
  top: 20rpx;
  left: -50rpx;
}

.answer_explain .explain {
  line-height: 50rpx;
  word-break: break-all;
}

.btn_area {
  height: 150rpx;
  position: fixed;
  bottom: 0rpx;
  display: flex;
  align-items: center;
  width: 100vw;
}
.btn_area button{
  color:white;
  height: 110rpx;
  bottom: 50rpx;
  left: 12.5vw;
  width: 75vw;
  position: fixed;
  border-radius: 50rpx;
  line-height: 110rpx;
  background-color: rgb(50, 140, 255);
}

.answer_item .radio {
  border-radius: 50%;
}


.modal_auth {
  position: relative;
  width: 540rpx;
  height: 256rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  display: block;
  padding-top: 30rpx;
}

.modal_auth image {
  width: 247rpx;
  margin: 80rpx auto 50rpx auto;
}

.modal_auth .login_text {
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  color: #333333;
  text-align: center;
}

.modal_auth .waring {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  padding: 0 30rpx;
  color: #333333;
  text-align: center;
  margin-top: 26rpx;
}

.btn_none {
  opacity: 0;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
}

.footer {
  display: flex;
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 99rpx;
  line-height: 99rpx;
  border-top: 1rpx solid#E0E0E0;
}

.footer .item {
  flex: 1;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #057AFF;
  text-align: center;
  position: relative;
}

.footer .item:first-child {
  font-family: PingFangSC-Regular;
  color: #999999;
}

.footer .item:first-child::after {
  content: '';
  height: 20rpx;
  background: #E0E0E0;
  width: 2rpx;
  display: block;
  position: absolute;
  top: 50%;
  right: -1rpx;
  transform: translateY(-50%);
}

.page-progress {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 0 30rpx;
  font-size: 28rpx;
  justify-content: space-between;
}

.page-progress-item-bg,
.page-progress-item{
  flex: 0 0 80vw;
  border-radius: 5rpx;
  height: 10rpx;
  background: rgb(245, 244, 245);
  position: relative;
}
.page-progress-item {
  width: 1%;
  background: #057AFF;
  position: absolute;
  top: 0rpx;
  z-index: 11;
  transition: width .5s linear;
}