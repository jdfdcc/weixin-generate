.detail_header{
  height: 112rpx;
  background: #FFE11C;
  text-align: center;
  line-height: 112rpx;
  font-family: "PingFangSC-Medium";
}
.page_gray image {
  margin: 0;
  padding: 0;
}
.page_footer_buy{
  height: 140rpx;
  display: flex;
  position: fixed;
  bottom: 0rpx;
  width: 100vw;
  align-items: center;
  background: #fff;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  box-shadow: 0rpx 0rpx 10rpx #e0e0e0;
}
.page_footer_buy .left{
  flex: 1;
  display: flex;
  flex-direction: column;
  color: #000;
  font-size: 50rpx;
  font-family: "PingFangSC-Medium";
}
.money::before {
  content: 'ï¿¥';
  font-size: 30rpx;
}
.left .waring{
  color: #999;
  font-size: 24rpx;
}
.page_footer_buy button{
  flex: 0 0 300rpx;
  background: #FFE11C;
  border-radius: 8rpx;
  box-shadow: 0rpx 0rpx 10rpx #FFE11C;
}

.content {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.content .item{
  flex:  0 0 25vw;
  margin-left: 5vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* animation: float 1s linear infinite; */
}
.content .item text{
  text-align: center;
  display: block;
  margin-top: -30rpx;
}
.content .item view{
  height: 25vw;
  background: linear-gradient( #F8D253, #FD8517); 
  border-radius: 50%;
  margin-top: 30rpx;
  box-shadow: 1rpx 0rpx 40rpx #FFE11C;
  color: white;
  padding: 40rpx;
  box-sizing: border-box;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
}
.item view text{
  font-size: 50rpx;
  margin-top: -20rpx;
  font-family: "PingFangSC-Medium";
}

@keyframes float{
  0%{
    transform: translateY(-10rpx)
  }
  100%{
    transform: translateY(10rpx)
  }
}
.page_detail{
  width: 100vw;
}