<!-- 点击返回 -->
<label bindtap='clickItem' class='form_item' wx:if ="{{item.type === 'click'}}">
  <text>{{ value || item.placeholder }}</text>
  <image class='icon icon_right' src='{{item.icon || "https://static.iyunbao.com/website/health/iybApp/iyb_mpvue/icon/icon_right1.png"}}'></image>
</label>

<!-- 自定义 -->
<view class='form_item' wx:if="{{item.type === 'slot'}}">
  <slot></slot>
</view>

