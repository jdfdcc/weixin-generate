.form_item{
  font-size: 30rpx;
  color: #333;
  letter-spacing: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}
.form_item .date {
  flex:1;
}
.form_item .icon{
  width: 40rpx;
  height: 40rpx;
}
.form_item image{
  width: 35rpx;
  height: 35rpx;
  margin-right: 30rpx;
  background: white;
}
.form_item .icon_right{
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
}

.error_info{
  color: red;
  font-size: 22rpx;
  position: absolute;
  margin-top: -10rpx;
  pointer-events: none;
}