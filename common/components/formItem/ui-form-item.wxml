<!-- 输入框 -->
<view class='form_item form_input' wx:if ="{{item.type === 'input'}}">
  <input style='flex:1'
    value='{{value}}'
    placeholder="{{item.placeholder}}"
    bindfocus='focus'
    bindblur='inputChange' />
  <image mode="widthFix" bindtap='clearValue' wx:if="{{hasIcon && value && !item.hasCode}}" src='https://static.iyunbao.com/website/health/iybApp/iyb_mpvue/center/x.png'></image>
  <image mode="widthFix" bindtap='clickIcon' wx:if="{{hasIcon && item.icon}}" src='{{item.icon}}'></image>
</view>

<!-- 日期 -->
<label for="date" class='form_item' wx:elif ="{{item.type === 'date' || item.type === 'birthdate'}}">
  <picker class='date' mode="date" start="{{item.start || '1900-09-01'}}"  end="{{item.type === 'birthdate' ? endDate : (item.type === 'bdate')}}" value="{{value}}" bindchange="inputChange">
    <view>
      {{ value || item.placeholder }}
    </view>
  </picker>
  <image class='icon icon_right' style='margin-right: {{hasIcon ? "30rpx" : "0rpx"}}' bindtap='clickIcon' src='{{item.icon || "https://static.iyunbao.com/website/health/iybApp/crm/icon_right.png"}}'></image>
</label>

<!-- 选择框 -->
<label for="date" class='form_item' wx:elif ="{{item.type === 'select'}}">
  <picker class="date" range="{{item.actions}}" value="{{selectIndex}}" range-key="value" bindchange="inputChange">
      <view>
          {{ item.actions[selectIndex].value || item.placeholder }}
      </view>
  </picker>
  <image class='icon icon_right'  style='margin-right: {{hasIcon ? "30rpx" : "0rpx"}}' bindtap='clickIcon' src='{{item.icon || "https://static.iyunbao.com/website/health/iybApp/crm/icon_right.png"}}'></image>
</label>

<!-- 点击返回 -->
<label bindtap='clickItem' class='form_item' wx:elif ="{{item.type === 'click'}}">
  <text>{{ value || item.placeholder }}</text>
  <image class='icon icon_right' src='{{item.icon || "https://static.iyunbao.com/website/health/iybApp/crm/icon_right.png"}}'></image>
</label>

<!-- 点击返回 -->
<label class='form_item' wx:elif ="{{item.type === 'text'}}">
  <text>{{ value || value === 0 ? value : item.placeholder }}</text>
  <image class='icon icon_right' src='{{item.icon || "https://static.iyunbao.com/website/health/iybApp/crm/icon_right.png"}}'></image>
</label>

<!-- 自定义 -->
<view class='form_item' wx:if="{{item.type === 'slot'}}">
  <slot></slot>
</view>


<view wx:if="{{showError}}" class='error_info'>
  {{errorMsg}}
</view>

